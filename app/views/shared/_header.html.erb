<%= image_tag "logo.gif", size: "272x48", alt: "Morning Glory "%>
<% if current_member %>
  <ul class="account-menu">
    <%= menu_link_to current_member.name + "さん", :account %>
    <%= menu_link_to "ログアウト", :session,
    method: :delete, data:{confirm: "ログアウトしますか?" } %>
    <div style="padding-right:10px;"><%= l(Time.current, format: :long) %></div>
  </ul>
<% else %>
    <div style="float:right; padding-right:8px; padding-top:15px;"><%= l(Time.current, format: :long) %></div>
<% end %>

<nav class="menubar">
  <ul>
    <%= menu_link_to "TOP", "/" %>
    <%= menu_link_to "ニュース", :articles %>
    <%= menu_link_to "ブログ", "#" %>
    <% if current_member %>
      <%= menu_link_to "会員名簿", :members %>
      <%= menu_link_to "管理ページ", "#" %>
    <% end %>
  </ul>
</nav>
